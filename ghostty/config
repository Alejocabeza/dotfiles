theme = Gruvbox Material

font-family = Hack Nerd Font Mono
font-size = 12

background-opacity = 0.95
background-blur-radius = 20

window-decoration = false
window-padding-color = extend
window-step-resize = false
window-padding-balance = true
window-height = 100
window-width = 100

gtk-tabs-location = hidden

# Navegación con sintaxis explícita
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

# Creación de splits (más intuitivo)
keybind = alt+/=new_split:right
keybind = alt+-=new_split:down

# Pestañas (Tabs)
keybind = alt+t=new_tab
keybind = alt+n=next_tab
keybind = alt+p=previous_tab

# Limpiar la terminal con Alt + C
keybind = alt+c=clear_screen

# Si quieres que Ctrl+L deje de funcionar (para que no te borre la terminal por error)
keybind = ctrl+l=unbind

# Maximizar / Restaurar panel (Zoom)
keybind = alt+m=toggle_split_zoom
