{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "testsprite": {
      "type": "local",
      "command": ["npx", "@testsprite/testsprite-mcp@latest"],
      "environment": {
        "API_KEY": "...",
      },
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "...",
      },
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
    },
  },
}
